generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Role {
  Customer
  Admin
  Organizer
}

model User {
  userId      Int      @id @default(autoincrement())
  firstName   String
  secondName  String?
  lastName    String
  email       String   @unique
  password    String
  roles       Role[]
  phoneNumber String   @unique
  createdAt   DateTime @default(now())
  updatedAt   DateTime @default(now())
}

model Event {
  eventId   Int      @id @default(autoincrement())
  eventName String
  createdAt DateTime @default(now())
  updatedAt DateTime @default(now())
}
